location / {
    # tente servir o arquivo diretamente, fallback para reescrita
    try_files $uri @rewriteapp;
}

location @rewriteapp {
    # reescreva tudo para index.php
    rewrite ^(.*)$ /index.php/$1 last;
}

location ~ ^/(app|app_dev|config)\\.php(/|$) {
    try_files @heroku-fcgi @heroku-fcgi;
    internal;
}
